{
  "name": "large",
  "version": "0.0.1",
  "description": "A serverless and peer-to-peer blogging platform. Build a website that's hosted by your users with IPFS.",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/ptoner/large.git"
  },
  "scripts": {
    "electron": "electron index.js",
    "serve": "http-server ./www/ -o -c 1 -a localhost -p 8081",
    "build": "./build.sh",
    "dist": "./dist.sh",
    "watch": "./watch.sh"
  },
  "keywords": [
    "framework7",
    "template",
    "ios",
    "android",
    "mobile",
    "app",
    "cordova",
    "phonegap"
  ],
  "build": {
    "appId": "large",
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "files": [
      "www/**",
      "index.js",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ]
  },
  "author": "Patrick Toner",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/ptoner/large/issues"
  },
  "homepage": "https://gitlab.com/ptoner/large#readme",
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.2.3",
    "@babel/polyfill": "7.2.3",
    "@babel/preset-env": "7.2.3",
    "@types/node": "12.12.17",
    "babel-plugin-add-module-exports": "1.0.0",
    "babelify": "10.0.0",
    "browser-resolve": "1.11.3",
    "browserify": "16.2.3",
    "cpy-cli": "^1.0.1",
    "electron": "6.0.10",
    "electron-builder": "^21.2.0",
    "http-server": "^0.10.0",
    "large-core": "0.0.23",
    "large-web": "0.0.17",
    "moment": "2.24.0",
    "ts-node": "8.5.4",
    "tsify": "4.0.1",
    "typescript": "3.7.3"
  },
  "dependencies": {
    "ipfs": "0.38.0",
    "quill-delta-to-html": "0.10.13",
    "quill": "1.3.6",
    "quill-blot-formatter": "1.0.5",
    "framework7": "5.1.3",
    "framework7-icons": "^2.3.1"
  }
}
